:root {
  font-family: Inter, system-ui, Avenir, Helvetica, Arial, sans-serif;
  line-height: 1.5;
  font-weight: 400;
  font-size: 0.9rem;
  overflow: hidden;
  overflow-y: scroll;

  color-scheme: dark;
  color: rgba(255, 255, 255, 0.87);
  background-color: #242424;

  font-synthesis: none;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

a {
  font-weight: 500;
  color: #646cff;
  text-decoration: inherit;
}
a:hover {
  color: #535bf2;
}

body {
  margin: 0;
  display: flex;
  place-items: top;
}

h1 {
  font-size: 2.5em;
  line-height: 1.1;
  color:rgb(30, 150, 215);
  text-align: center;
  margin-bottom: 3ex;
}
h2 {
  font-size: 1.2em;
  margin-bottom: 1ex;
}

/* // TODO move */
.card {
  border-radius: 8px;
  border: 1px solid transparent;
  padding: 0.6em 1.2em;
  font-size: 1em;
  font-weight: 500;
  font-family: inherit;
  background-color: rgb(32, 32, 32);
  box-sizing: border-box;
}

details > summary {
	cursor: pointer;
}