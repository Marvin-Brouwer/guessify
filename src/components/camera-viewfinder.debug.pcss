.camera-canvas .video-overlay.debug {
  clip-path: unset !important;
  backdrop-filter: unset !important;
  background: none;
  .viewfinder {
    #download-all {
      position: absolute;
      left: 0;
      left: 0;
      left: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0);
      cursor: pointer;
	  z-index: 999;
    }
    canvas {
      display: unset !important;
      touch-action: none;
      pointer-events: none;
      position: absolute;
      left: 0;
      top: 0;
      margin: -2px 0 0 -2px;

      &#scale {
        opacity: 0.6;
        position: fixed;
        margin: 0;
      }
      &#grayscale {
        opacity: 0.3;
        width: calc(100% + 4px);
      }
      &#edge {
        opacity: 0.7;
        width: calc(100% + 4px);
      }
    }
    &:hover canvas#grayscale,
    &:active canvas#grayscale {
      opacity: 1;
    }
  }
}
